			// 5.3.3. 	Если оба сальдо кредитовых, то надо исправлять счет 1 (Дб1 - Кр2):
			//		Проводка Дб1 - Кр2, сумма Слд1
		ИначеЕсли Сальдо1 < 0 И Сальдо2 <= 0 Тогда
			Сумма 		= -Сальдо1;
			Дебет 		= ПланыСчетов.Хозрасчетный.НДС_ПодлежащийВозмещению;
			Кредит 		= ПланыСчетов.Хозрасчетный.НДСКОплате;
			
			// 5.3.4. 	Если Слд1 - дебетовое, а Слд2 - кредитовое, то надо убирать меньшее сальдо,
			//		В любом случае проводка Кт2 - Дт1
			//		если Слд1<=Слд2,  	сумма Слд1
			//		если Слд1>Слд2, 	сумма Слд2
		ИначеЕсли Сальдо1 >= 0 И Сальдо2 <= 0 Тогда
			Если Сальдо1 <= -Сальдо2 И Сальдо1 <> 0 Тогда
				Сумма 	= Сальдо1;
				Дебет 	= ПланыСчетов.Хозрасчетный.НДСКОплате;
				Кредит 	= ПланыСчетов.Хозрасчетный.НДС_ПодлежащийВозмещению;
			ИначеЕсли Сальдо1 > -Сальдо2 И Сальдо2 <> 0 Тогда
				Сумма 	= -Сальдо2;
				Дебет 	= ПланыСчетов.Хозрасчетный.НДСКОплате;
				Кредит 	= ПланыСчетов.Хозрасчетный.НДС_ПодлежащийВозмещению;
			КонецЕсли;				
			
			// 5.3.5. 	Если Слд1 - кредитовое, а Слд2 - дебетовое, то надо убирать большее сальдо,
			//		если Слд1<Слд2, то проводка Дб1 - Кр2, сумма Слд2
			//		если Слд1>Слд2, то проводка Дб1 - Кр2, сумма Слд1
		ИначеЕсли Сальдо1 <= 0 И Сальдо2 >= 0 Тогда
			Если -Сальдо1 <= Сальдо2 Тогда
				Сумма 	= Сальдо2;
				Дебет 	= ПланыСчетов.Хозрасчетный.НДС_ПодлежащийВозмещению;
				Кредит 	= ПланыСчетов.Хозрасчетный.НДСКОплате;
			КонецЕсли;
			Если -Сальдо1 > Сальдо2 Тогда
				Сумма 	= -Сальдо1;
				Дебет 	= ПланыСчетов.Хозрасчетный.НДС_ПодлежащийВозмещению; 
				Кредит 	= ПланыСчетов.Хозрасчетный.НДСКОплате;
			КонецЕсли;				
		КонецЕсли;	
		
		СтрокаТабличнойЧасти.СчетДт = Дебет;
		СтрокаТабличнойЧасти.СчетКт = Кредит;
		СтрокаТабличнойЧасти.Сумма	= Сумма;
	    		
	КонецЕсли;
	
	// 5.4. Формирование проводки 8100 - 1540 
