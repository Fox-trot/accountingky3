		Элементы.УслугиСуммаНДС.ТолькоПросмотр 	= Истина;
		Элементы.УслугиСуммаНСП.ТолькоПросмотр 	= Истина;		
	Иначе
		Элементы.ТоварыВсего.ТолькоПросмотр 	= Ложь;
		Элементы.ТоварыЦена.ТолькоПросмотр 		= Ложь;
		Элементы.ТоварыСумма.ТолькоПросмотр 	= Ложь;
		Элементы.ТоварыСуммаНДС.ТолькоПросмотр 	= Ложь;
		Элементы.ТоварыСуммаНСП.ТолькоПросмотр 	= Ложь;
		
		Элементы.УслугиВсего.ТолькоПросмотр 	= Ложь;
		Элементы.УслугиЦена.ТолькоПросмотр 		= Ложь;
		Элементы.УслугиСумма.ТолькоПросмотр 	= Ложь;
		Элементы.УслугиСуммаНДС.ТолькоПросмотр 	= Ложь;
		Элементы.УслугиСуммаНСП.ТолькоПросмотр 	= Ложь;		
